/**
 * PERFORMANCE OPTIMIZATION: Static Asset Caching Strategy
 * 
 * Goals:
 * - Maximize cache lifetimes for versioned static assets (JS, CSS, images)
 * - Keep HTML documents fresh with short cache (enables quick updates)
 * - Reduce repeat load time by ~242 KiB (per PageSpeed Insights)
 * 
 * Strategy:
 * - Vite-generated assets (hashed filenames) → 1 year immutable cache
 * - Static images/fonts → 1 month cache with validation
 * - HTML → No cache (always fetch fresh for SPA routing)
 * - Service workers → No cache (must stay current)
 */

# Vite-generated JS bundles (hashed filenames: index-*.js, vendor-*.js, etc.)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

# Vite-generated CSS bundles (hashed filenames)
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 month
*.png
  Cache-Control: public, max-age=2592000

*.jpg
  Cache-Control: public, max-age=2592000

*.jpeg
  Cache-Control: public, max-age=2592000

*.webp
  Cache-Control: public, max-age=2592000

*.svg
  Cache-Control: public, max-age=2592000

# Cache fonts for 1 year
*.woff2
  Cache-Control: public, max-age=31536000, immutable

*.woff
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS for 1 year (with versioning)
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable

# HTML files - cache for 1 hour
/*.html
  Cache-Control: public, max-age=3600

# Service worker - don't cache
/sw.js
  Cache-Control: no-cache

# API responses - cache for 5 minutes
/api/*
  Cache-Control: public, max-age=300